rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    //Allow an Admin to read, write and update the organisation document that belongs to them
    match /organisations/{organisation}/{document=**} {
      allow read, write, update, delete: if request.auth.token.admin == "true" && request.auth.token.org == organisation;
    }

    //Allow an Admin of that organisation to access and edit the users data
    match /organisations/{organisation}/users/{user} {
      allow read, write, update, delete: if request.auth.token.admin == "true" && request.auth.token.org == organisation;
    }

    //Allow an admin to read the users booking documents
    match /organisations/{organisation}/bookings/{booking} {
      allow read: if request.auth.token.admin == "true" && request.auth.token.org == organisation;
    }

        //Allow an Admin of that organisation to read update write and delete the services collection
    match /organisations/{organisation}/availability/services {
      allow read, write, update, delete: if request.auth.token.admin == "true" && request.auth.token.org == organisation;
    }

    //Allow an Admin of that organisation to update the organisations opperating hours
    match /organisations/{organisation}/availability/opperatingHours {
      allow read, write, update, delete: if request.auth.token.admin == "true" && request.auth.token.org == organisation;
    }



    //Allow a user to access and edit their own data
    match /organisations/{organisation}/users/{user} {
      allow read, write, update, delete: if request.auth != null;
    }

    //Allow a user to read their booking documents
    match /organisations/{organisation}/bookings/{booking} {
      allow read: if request.auth.uid == resource.data.userId;
    }

    //Allow anyone to read an organisations availability
    //for the selected request date
    match /organisations/{organisation}/availability/opperatingHours {
      allow read: if true;
    }

    //Allow anyone to read the bookedSchedule collection
    //for dates in the future
    match /organisations/{organisation}/bookedSchedule/{date} {
      allow read: if true;
    }

    //Allow anyone read the services collection
    match /organisations/{organisation}/availability/services {
      allow read: if true;
    }
  }
}